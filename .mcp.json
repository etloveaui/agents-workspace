{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "--root",
        ".",
        "--root",
        ".claude"
      ],
      "env": {}
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {}
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "env": {}
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp"
      ],
      "env": {}
    },
    "hello-mcp": {
      "command": "node",
      "args": [
        "servers/hello-mcp/index.js"
      ],
      "env": {}
    },
    "ide": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-ide"
      ],
      "env": {}
    }
  }
}